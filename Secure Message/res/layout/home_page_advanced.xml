<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/home_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->

    <RelativeLayout
        android:id="@+id/drawer_relative_layout"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#282828"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

        <Button
            android:id="@+id/home_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:drawableLeft="@drawable/ic_menu_home"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/home"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/seperator1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/home_button"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/settings_48"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/settings"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/seperator12"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/settings_button"
            android:background="@android:color/holo_blue_light" />

        <!-- Bottom Buttons -->

        <View
            android:id="@+id/seperator_minus_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/help_button"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seperator_minus_1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/faq"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/faq"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/seperator_minus_1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/about_button"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/about_us"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="@string/about_us"
            android:textColor="@android:color/white" />
        
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>